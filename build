
# build the game!
echo 'activate virtualenv'
. venv/bin/activate
echo 'run pyinstaller'
pyinstaller --workpath tmp --distpath bin --clean --onefile --strip src/roguelike.py
echo 'removing tmp and roguelike.spec'
rm -r tmp
rm roguelike.spec
echo 'deactivate virtualenv'
deactivate
echo ''

# build the doku!
echo 'build dokumentation file'
pandoc --from=markdown --to=latex --output=bin/README.pdf --standalone --smart README
echo 'DONE!'


